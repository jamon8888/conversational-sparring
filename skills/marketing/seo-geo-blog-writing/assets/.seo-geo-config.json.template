{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SEO-GEO Blog Writer Configuration",
  "description": "Configuration file for SEO-GEO blog writer tool with content sources and feature settings",

  "dataforseo": {
    "api_key": null,
    "_comment": "DataForSEO API credentials for keyword research. Supports Base64-encoded format (login:password) or plain text. Get credentials from https://dataforseo.com"
  },

  "sanity": {
    "project_id": "your-sanity-project-id",
    "dataset": "production",
    "api_version": "2023-05-03",
    "token": null,
    "_comment": "Token is optional - only needed for private datasets. Leave null for public datasets."
  },

  "content_sources": {
    "sitemap_url": null,
    "local_markdown_dir": null,
    "_comment": "Priority 1: sitemap_url (e.g., 'https://yourdomain.com/sitemap.xml') - Best for Claude Code containers. Priority 2: local_markdown_dir (e.g., './blog-posts') - Works in all environments"
  },

  "internal_linking": {
    "min_confidence_auto_insert": 90,
    "max_links_per_post": 5,
    "cache_ttl_hours": 24,
    "_comment": "Links with relevance â‰¥ min_confidence_auto_insert will be automatically inserted"
  },

  "validation": {
    "target_score": 80,
    "max_iterations": 3,
    "_comment": "Iterative validation stops when target_score reached OR max_iterations hit"
  },

  "image_generation": {
    "enabled": false,
    "google_project_id": null,
    "openai_api_key": null,
    "max_images_per_post": 5,
    "output_dir": "./generated_images",
    "_comment": "Image generation available. Google Imagen requires gcloud auth (run: gcloud auth application-default login) OR set GOOGLE_APPLICATION_CREDENTIALS env var. Only google_project_id needs to be configured here. OpenAI only needs openai_api_key. Cost: Google $0.02/img, OpenAI $0.04-$0.08/img. Set enabled=true when ready."
  },

  "_usage": {
    "location": "Place this file at project root as .seo-geo-config.json (without .template)",
    "priority": "Config file settings override environment variables but are overridden by CLI arguments",
    "security": "Add .seo-geo-config.json to .gitignore to avoid committing credentials"
  }
}
